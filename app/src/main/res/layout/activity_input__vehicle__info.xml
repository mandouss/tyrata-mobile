<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.duke.ece651.tyrata.calibration.Input_Vehicle_Info">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Please input your vehicle information: "
        android:textSize="22dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Make"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="Make: "
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_make"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/Model"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:text="Model: "
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_model"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Make" />

    <TextView
        android:id="@+id/Year"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:text="Year: "
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_year"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Model" />

    <TextView
        android:id="@+id/VIN"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:text="VIN: "
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_vin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Year" />

    <EditText
        android:id="@+id/edit_make"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/edit_vehicle_make"
        android:inputType="textLongMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Make"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/edit_model"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:hint="@string/edit_vehicle_model"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Model"
        app:layout_constraintTop_toBottomOf="@+id/edit_make" />

    <EditText
        android:id="@+id/edit_year"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:hint="@string/edit_vehicle_year"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Year"
        app:layout_constraintTop_toBottomOf="@+id/edit_model" />

    <EditText
        android:id="@+id/edit_vin"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:hint="@string/edit_vehicle_vin"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/VIN"
        app:layout_constraintTop_toBottomOf="@+id/edit_year" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="30dp"
        android:onClick="saveMessage"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VIN"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
