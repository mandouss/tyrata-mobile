<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.duke.ece651.tyrata.communication.BluetoothActivity">

    <Button
        android:id="@+id/btn_s0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device List"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="38dp" />

    <Button
        android:id="@+id/btn_s1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pairedBluetooth"
        android:text="Paired Devices"
        app:layout_constraintTop_toBottomOf="@+id/btn_s0"
        tools:layout_editor_absoluteX="160dp" />

    <Button
        android:id="@+id/btn_s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="discoverBluetooth"
        android:text="Discover Devices"
        app:layout_constraintTop_toBottomOf="@+id/btn_s1"
        tools:layout_editor_absoluteX="160dp" />

    <Button
        android:id="@+id/btn_s3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="acceptBluetooth"
        android:text="Accept BT"
        app:layout_constraintTop_toBottomOf="@+id/btn_s2"
        tools:layout_editor_absoluteX="160dp" />

    <Button
        android:id="@+id/btn_s4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONNECT BT"
        app:layout_constraintTop_toBottomOf="@+id/btn_s3"
        tools:layout_editor_absoluteX="160dp" />

    <Button
        android:id="@+id/btn_s5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendMsg"
        android:text="SEND MSG"
        app:layout_constraintTop_toBottomOf="@+id/btn_s4"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="278dp" />

</android.support.constraint.ConstraintLayout>
