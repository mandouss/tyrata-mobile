<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.duke.ece651.tyrata.display.Vehicle_Info">

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3">
    <TextView
        android:id="@+id/title_vehicle_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_columnSpan="3"
        android:text="Information for the vehicle: "
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_make"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="Make: "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/textView_make"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_make"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_columnSpan="2"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/label_make"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_model"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="Modelï¼š "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/textView_model"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_make" />

    <TextView
        android:id="@+id/textView_model"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_columnSpan="2"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/label_model"
        app:layout_constraintTop_toBottomOf="@+id/textView_make" />

    <TextView
        android:id="@+id/label_year"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="Year: "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/textView_year"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_model" />

    <TextView
        android:id="@+id/textView_year"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_columnSpan="2"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/label_year"
        app:layout_constraintTop_toBottomOf="@+id/textView_model" />

    <TextView
        android:id="@+id/label_vin"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="VIN: "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/textView_vin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_year" />

    <TextView
        android:id="@+id/textView_vin"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_columnSpan="2"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/label_vin"
        app:layout_constraintTop_toBottomOf="@+id/textView_year" />

    <TextView
        android:id="@+id/label_tirenumber"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/label_vin"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="Number of tires: "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_vin" />

    <TextView
        android:id="@+id/textView_tirenumber"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_columnSpan="2"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/label_tirenumber"
        app:layout_constraintTop_toBottomOf="@+id/textView_vin" />

    <Button
        android:id="@+id/button_edit_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:onClick="switchToEdit"
        android:text="Edit"
        app:layout_constraintEnd_toStartOf="@+id/button_delete_vehicle_m"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_tirenumber" />

    <Button
        android:id="@+id/button_delete_vehicle_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_columnSpan="2"
        android:onClick="delete_vehicle"
        android:text="Delete this car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_edit_vehicle"
        app:layout_constraintTop_toBottomOf="@+id/label_tirenumber" />



    <TextView
        android:id="@+id/textView_tires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_columnSpan="3"
        android:text="Tires: "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_edit_vehicle" />

    <ImageView
        android:id="@+id/image_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_columnSpan="3"
        android:layout_marginTop="10dp"
        android:src="@drawable/four_wheel"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="345dp" />

    <edu.duke.ece651.tyrata.display.ListViewForScrollView
        android:id="@+id/tire_list"
        android:layout_width="367dp"
        android:layout_height="171dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_columnSpan="3"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_vehicle"></edu.duke.ece651.tyrata.display.ListViewForScrollView>




</GridLayout>

</ScrollView>
